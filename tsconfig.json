{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["bun", "node"],
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "customConditions": ["browser"],
    "paths": {
      "@game-agent/agent": ["packages/agent/src/index.ts"],
      "@/*": ["packages/opencode/packages/opencode/src/*"],
      "@tui/*": ["packages/opencode/packages/opencode/src/cli/cmd/tui/*"]
    }
  },
  "include": ["apps", "packages"],
  "exclude": ["node_modules"]
}
